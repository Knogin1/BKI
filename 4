#include <rbc.h>

float HighLeft = 58;
float HighRight = 58;
float LowLeft = 6;
float LowRight = 5;
float Kprop = 1;

float difSensValue;//разница отклонений значений датчиков от минимального значени

int pw = 50; //мощность двигателей(«путевая мощность»)

task main(){
    while(true){
        difSensValue=(getColorReflected(S3)-LowLeft)-(getColorReflected(S2)-LowRight);
	    setMotorSpeed(motorD, pw + difSensValue*Kprop);
    	setMotorSpeed(motorA, pw - difSensValue*Kprop);
	    delay(100);	//время реакции необходимое на изменение положения системы
    }
}
